<div class="controls-box" style="padding: 20px;">
  <%= link_to 'Back to Teacher Listing', teachers_path, :class => 'btn'  %>
  <%= link_to 'Edit Teacher', edit_teacher_path(@teacher), :class => 'btn' %>
</div>

<div class="page-header">
  <h2>Manage Teacher</h2>
  <h3><%= @teacher.first_name %> <%= @teacher.family_name %></h3>
</div>

<div class="content-clear"></div>

<div class="content-box">

<p>
  <strong>Gender:</strong> <%= @teacher.gender %><br>
</p>

<p>
  <% if @teacher.email.length > 0 %>
    <strong>Resound Email</strong>: <a href="mailto:<%= @teacher.email %>"><%= @teacher.email %></a><br>
  <% end %>
</p>

<h4>Address</h4>

<p>
  <%= @teacher.street_address %><br>
  <%= @teacher.city %>, BC <%= @teacher.postal_code %>
</p>

<p>
  <% if @teacher.phone_number1.length > 0 %>
    <b>Primary phone:</b> <%= number_to_phone(@teacher.phone_number1, :area_code => true) %><br>
  <% end %>
  <% if @teacher.phone_number2.length > 0 %>
    <b>Secondary phone:</b> <%= number_to_phone(@teacher.phone_number2, :area_code => true) %><br>
  <% end %>
  <% if @teacher.phone_number3 && @teacher.phone_number3.length > 0 %>
    <strong>Phone Number 3</strong>: <%= number_to_phone(@teacher.phone_number3, :area_code => true) %>
  <% end %>

  <% if @teacher.secondary_email.length > 0 %>
    <strong>Seconary Contact Email</strong>: <a href="mailto:<%= @teacher.secondary_email %>"><%= @teacher.secondary_email %></a><br>
  <% end %>
</p>

</div>

<div class="content-box well">

<h3>Notes</h3>
<p>
  <% if @teacher.notes.length > 0 %>
    <%= @teacher.notes %>
  <% else %>
    No notes
  <% end %>
</p>

<br>

<p>
  <b>Status:</b>
  <%= @teacher.status_text %>
</p>

</div>

<div class="content-clear"></div>


<div class="main-unit">

  <%= render :partial => 'list_instruments' %>

  <%= render :partial => 'add_instrument' %>

</div>

<div class="main-unit">

  <%= render :partial => 'list_availability' %>

  <%= render :partial => 'add_availability' %>

</div>

<div class="form-actions">
  <%= link_to 'Delete Teacher', teacher_path(@teacher), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
