<div class="main-unit">

<h1>Manage Teacher: <%= @teacher.first_name %> <%= @teacher.family_name %></h1>

<p>&nbsp;</p>

<p>
  <strong>Gender:</strong> <%= @teacher.gender %><br>
</p>

<p>
  <b>Email:</b> <%= @teacher.email %>
</p>

<h4>Address</h4>

<p>
  <%= @teacher.street_address %><br>
  <%= @teacher.city %>, <%= @teacher.postal_code %>
</p>

<p>
  <b>Home phone:</b> <%= @teacher.home_phone %><br>
  <b>Mobile phone:</b> <%= @teacher.mobile_phone %><br>
  <b>Secondary email:</b> <%= @teacher.secondary_email %>
</p>

<p>
  <b>Notes</b><br>
  <%= @teacher.notes %>
</p>

<p>
  <b>Status</b><br>
  <%= @teacher.status %>
</p>


<h2>Instruments</h2>

<% if @teacher.teacher_instrument.any? %>

  <% @teacher.teacher_instrument.each do |instrument| %>
    <h3><%= instrument.name %></h3>
  <% end %>

<% else %>
  <p>No Instruments Yet</p>
<% end %>



<div class="form-actions">
  <%= link_to 'Back', teachers_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_teacher_path(@teacher), :class => 'btn' %>
  <%= link_to 'Delete', teacher_path(@teacher), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
