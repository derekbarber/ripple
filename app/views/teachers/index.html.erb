<h1>Teachers</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>First name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.id %></td>
        <td><%= link_to teacher.first_name, teacher_path(teacher) %></td>
        <td><%= teacher.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_teacher_path(teacher), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', teacher_path(teacher), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_teacher_path, :class => 'btn btn-primary' %>
