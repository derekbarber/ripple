<%= simple_form_for(@student) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :family_name %>
    <%= f.input :family_id %>
    <%= f.input :birthday %>
    <%= f.input :gender %>
    <%= f.input :custom_contact_details %>
    <%= f.input :street_address %>
    <%= f.input :city %>
    <%= f.input :postal_code %>
    <%= f.input :home_phone %>
    <%= f.input :mobile_phone %>
    <%= f.input :primary_email %>
    <%= f.input :secondary_email %>
    <%= f.input :notes %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
